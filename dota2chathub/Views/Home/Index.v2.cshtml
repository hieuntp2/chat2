<!--Home Index-->
@{
    ViewBag.Title = "Home Page";
}

<script src="~/scripts/aservices.js"></script>
<script src="~/scripts/acontrollers.v2.js"></script>
<script src="~/scripts/adirectives.js"></script>

<div id="indexcontext" ng-app="main_app" ng-controller="modulecontroller as controller" ng-init="controller.init('@ViewBag.userid')">
    <!-- Left col -->
    <section class="col-lg-2 connectedSortable" id="main_col_3_left"></section><!-- /.Left col -->
    <!--Miiddle collums-->

    <div class="col-lg-10 connectedSortable" id="main_col_6">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs" ng-controller="maintabscontroller as tabscontroller" ng-model="tabscontroller.tabs">
                <li ng-repeat="tab in tabscontroller.tabs">
                    <a href="#{{tab.id}}" data-toggle="tab">{{tab.name}}</a>
                </li>
            </ul>
            <div class="tab-content" ng-model="controller.tabs" id="main_content_box">
            </div><!-- /.tab-content -->
        </div>
    </div>

    @Html.Partial("modal")

    <div class="btn-group" style="float:right; position:absolute; right:20px; bottom: 70px;">
        <button class="btn btn-primary" aria-expanded="false" ng-click="showmodalcreateGroup()">Create group</button>
        <button class="btn btn-primary" aria-expanded="false" ng-click="showmodalfindgroup()">Find group</button>
    </div>

    <div class="overlay" ng-show="controller.isloading">
        <i class="fa fa-refresh fa-spin"></i>
    </div>
</div>

