<!-- Password Modal -->
<div class="modal fade modal-warning" id="_my_password_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-group">
                    <input id="_my_password_modal_input" autocomplete="off" type="password" class="form-control" placeholder="password">
                    <p id="_my_password_modal_message"></p>
                </div>                

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">OK</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<div id="_my_servince_box_content" ng-controller="my_alert_controller as controller" style="width: 300px; max-height: 300px; overflow-y: auto; background: transparent; position: absolute; bottom: 100px; right: 10px; z-index:10; ">
    <div class="alert alert-warning alert-dismissable" ng-repeat="alert in alerts" ng-style="{opacity : alert.opacity}" ng-mouseenter="onnoticed(alert.id)">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <i class="icon fa fa-warning"></i> {{alert.message}}
    </div>
    <div class="alert alert-success alert-dismissable" ng-repeat="infor in infors" ng-mouseenter="onnoticed(infor.id)" ng-style="{opacity : infor.opacity}">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <i class="icon fa fa-check"></i> {{infor.message}}
    </div>
</div>

