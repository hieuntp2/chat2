<!-- Password Modal -->
<div class="modal fade modal-info" id="_report_bug_modal" ng-controller="reportbugcontroller as controller">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-group">
                    <div class="radio">
                        <label>
                            <input type="radio" name="type_suggestion" value="_bug" checked="">
                            Report Bug
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="type_suggestion" id="_radio_suggestion" value="_sugges">
                            Suggestion
                        </label>
                    </div>                   
                </div>
                <div class="form-group">
                    <input type="text" autocomplete="off" class="form-control" placeholder="Title" ng-model="title" />
                    <p>{{alert_title}}</p>
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="message" ng-model="message"></textarea>
                    <p>{{alert_message}}</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" ng-click="sendbug()">Send</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /.modal -->

