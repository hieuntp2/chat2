<!--Private Chat-->

<div class="box box-info" private-chat ng-init="init('@ViewBag.userid')" id="{{id}}">
    <div class="box-header" style="cursor: move;">
        <i class="fa fa-comments-o"></i>
        <h4 class="box-title">
            <a data-toggle="collapse" href="#{{ 'private_chat_box_body_' + id }}" href="#collapseOne">
                {{name}}
            </a>
        </h4>

        <div class="pull-right box-tools">
            <!-- button with a dropdown -->
            <div class="btn-group">
                <button class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-bars"></i></button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li><a ng-click="clearmessage()">Xóa tin nhắn</a></li>
                    <li class="divider"></li>
                    <li><a ng-click="showuser()">Người tham gia</a></li>
                    <li><a ng-click="invUser()">Mời tham gia</a></li>
                    <li class="divider"></li>
                    <li><a ng-click="exit()">Thoát nhóm</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div id="{{ 'private_chat_box_body_' + id }}" class="panel-collapse collapse in">
        <div class="box-body chat chatboxbody" id="{{ 'private_chat_box_content_' + id }}" style="max-height:350px; overflow-y: auto;">
            <!-- chat item -->
            <div class="item" ng-repeat="message in messages">
                <img ng-src="{{message.avatar}}" alt="user image" class="online" />
                <p class="message">
                    <a href="#" class="name">
                        <small class="text-muted pull-right"><i class="fa fa-clock-o"></i>{{message.time}}</small>
                        {{message.name}}
                    </a>
                    <span class="message_content">{{message.content}}</span>
                    
                </p>
            </div>
            <!-- /.item -->

        </div><!-- /.chat -->
        <div class="box-footer">
            <div class="input-group">
                <input class="form-control" placeholder="Type message..." ng-enter="sendmessage()" id="{{'_privatechat_input_' + id}}" />
                <div class="input-group-btn">
                    <button class="btn btn-success" id="bt_public_chat_box_send" ng-click="showemotions()"><i class="fa fa-smile-o"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.box (chat box) -->
