<!--Public Group Chat-->

<div class="box box-success">
    <public-chat>
        <div class="box-header ui-sortable-handle" style="cursor: move;">
            <i class="fa fa-comments-o"></i>
            <h3 class="box-title">Public chat</h3>
            <div class="pull-right box-tools">
                <!-- button with a dropdown -->
                <div class="btn-group">
                    <button class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-bars"></i></button>
                    <ul class="dropdown-menu pull-right" role="menu">
                        <li><a ng-click="clearmessage()">Xóa tin nhắn</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="box-body chat chatboxbody" id="{{'public_chat_box'}}" style="max-height:350px; overflow-y: scroll;">

            <!-- chat item -->
            <div class="item" ng-repeat="message in messages">
                <img ng-src="{{message.avatar}}" alt="user image" class="online" ng-mouseenter="viewUserInfor(message.userid)" ng-mouseleave="offUserInfor()" />
                <p class="message">
                    <a class="name" style="cursor:pointer;">
                        <small class="text-muted pull-right"><i class="fa fa-clock-o"></i>{{message.time}}</small>
                        {{message.name}}
                    </a>
                    {{message.content}}
                </p>
            </div>
            <!-- /.item -->

        </div><!-- /.chat -->

        <div class="box-footer">
            <div class="input-group">
                <input class="form-control" id="txt_public_chat_input" placeholder="Type message..." ng--enter="sendmessage()" />
                <div class="input-group-btn">
                    <button class="btn btn-success" id="bt_public_chat_box_send" ng-click="sendmessage()"><i class="fa fa-plus"></i></button>
                </div>
            </div>
        </div>
    </public-chat>
</div><!-- /.box (chat box) -->


